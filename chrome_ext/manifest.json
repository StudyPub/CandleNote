{
  "manifest_version": 2,
  "name": "CandleNote Plugin",
  "description": "This extension will analyze a page using GTmetrix",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon1.png",
   "default_popup": "popup.html"
  },
  "content_scripts": [{
   "js": ["content.js"],
   "matches": ["http://*/*", "https://*/*"]
  }],
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "permissions": [
   "tabs", "activeTab", "pageCapture", "http://localhost:3000/"
   ]
}